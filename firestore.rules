rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is club owner of the target's club
    function isClubOwnerOf(targetData) {
      let currentUser = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return currentUser.role == 'club' && currentUser.clubId == targetData.clubId;
    }
    
    // Helper function to check if user is admin (using Custom Claims OR Firestore Doc)
    function isAdmin() {
      return request.auth.token.role == 'admin' || 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document
      // Club owners can read their members' documents
      // Admins can read ALL documents
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isClubOwnerOf(resource.data) ||
        isAdmin()
      );
      
      // Users can create their own document during registration (public reg)
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.credit == 0;
      
      // Users can update their profile fields
      // Club owners can update their members? (Maybe not needed if using functions, but requested)
      // Admins can update via Cloud Functions (rules don't apply to Admin SDK), 
      // but if they use client SDK, we might allow it. 
      // Generally, admin updates should go through Cloud Functions for safety/logging.
      allow update: if request.auth != null && (
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['credit', 'role', 'clubId'])) ||
        isClubOwnerOf(resource.data)
      );
    }
    
    // Invitations - Public read for setup (to validate token on client if needed)
    match /invitations/{token} {
      allow get: if true;
      allow list: if false;
      allow write: if false; // Only Cloud Functions
    }

    // Transaction logs
    match /transaction_logs/{logId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        request.auth.uid == resource.data.fromId ||
        request.auth.uid == resource.data.toId ||
        isAdmin()
      );
      allow write: if false;
    }

    // Financial Ledger - Admin only
    match /financial_ledger/{ledgerId} {
      allow read: if request.auth != null && isAdmin();
      allow write: if false;
    }

    // Clubs - Public read
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Tournaments - Public read, Admin write (if using client SDK, but we use Functions)
    // Tournaments - Public read, Admin write (if using client SDK, but we use Functions)
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if false; // Use Cloud Functions
      
      // Chat messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }

      // Participants subcollection
      match /participants/{participantId} {
        allow read: if request.auth != null;
      }

    }

    // Helper function to check if user is club owner
    function isClubOwner() {
      let currentUser = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return currentUser.role == 'club';
    }

    // Poker Tables - Global visibility, strict management
    match /poker_tables/{tableId} {
      // 1. VISIBILITY: Allow ANY authenticated user to see the table list
      allow read: if request.auth != null;

      // 2. MANAGEMENT: Only Admin/ClubOwner can create/update table settings
      allow create: if request.auth != null && (isAdmin() || isClubOwner());
      allow update: if request.auth != null && (isAdmin() || isClubOwner());

      // 3. PLAYERS SUBCOLLECTION (Sitting Logic)
      match /players/{seatId} {
        allow read: if request.auth != null;
        // CRITICAL: Only users with role 'player' can write their own seat
        // Admins/others CANNOT occupy a seat
        allow write: if request.auth.uid == seatId 
                     && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'player';
      }
    }
    
    // Live Feed - Public read for all authenticated users
    match /live_feed/{eventId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can create events
    }
    
    // System Feed - Admin only (for Super Admin Dashboard Live Feed)
    match /system_feed/{eventId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can create events
    }
    
    // Poker Sessions (In-Game Balance)
    match /poker_sessions/{sessionId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        isAdmin()
      );
      allow write: if false; // Only Cloud Functions
    }
    
    // System Stats - Super Admin Dashboard metrics (Critical for Dashboard)
    match /system_stats/{statId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions write here
    }
    
    // Stats Daily - For admin dashboard graphs
    match /stats_daily/{docId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions write here
    }
    
    // Settlement and Cashout Triggers (Backend â†’ Cloud Functions)
    match /_trigger_settlement/{docId} {
      allow create: if request.auth != null;
      allow read, delete: if false; // Only Cloud Functions access
    }
    
    match /_trigger_cashout/{docId} {
      allow create: if request.auth != null;
      allow read, delete: if false; // Only Cloud Functions access
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
