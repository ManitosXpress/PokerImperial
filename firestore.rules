rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is club owner of the target's club
    function isClubOwnerOf(targetData) {
      let currentUser = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return currentUser.role == 'club' && currentUser.clubId == targetData.clubId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document
      // Club owners can read their members' documents
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isClubOwnerOf(resource.data)
      );
      
      // Users can create their own document during registration (public reg)
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.credit == 0;
      
      // Users can update their profile fields
      // Club owners can update their members? (Maybe not needed if using functions, but requested)
      allow update: if request.auth != null && (
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['credit', 'role', 'clubId'])) ||
        isClubOwnerOf(resource.data)
      );
    }
    
    // Invitations - Public read for setup (to validate token on client if needed)
    match /invitations/{token} {
      allow get: if true;
      allow list: if false;
      allow write: if false; // Only Cloud Functions
    }

    // Transaction logs
    match /transaction_logs/{logId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        request.auth.uid == resource.data.fromId ||
        request.auth.uid == resource.data.toId
      );
      allow write: if false;
    }

    // Clubs - Public read
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Tournaments - Public read
    match /tournaments/{tournamentId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
