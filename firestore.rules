rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can create their own document during registration
      // But they cannot modify the 'credit' field directly
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.credit == 0;
      
      // Users can update their profile fields, but NOT credit
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['credit']);
      
      // Only admin/Cloud Functions can modify credit
      // (Cloud Functions run with admin privileges)
    }
    
    // Transaction logs - read-only for users
    match /transaction_logs/{logId} {
      allow read: if request.auth != null 
                  && request.auth.uid == resource.data.userId;
      allow write: if false; // Only Cloud Functions can write
    }

    // Clubs - Public read for authenticated users
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }

    // Tournaments - Public read for authenticated users
    match /tournaments/{tournamentId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
