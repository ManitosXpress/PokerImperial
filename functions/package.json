{
    "name": "poker-functions",
    "version": "1.0.0",
    "description": "Firebase Cloud Functions for Poker Game - Server-Authoritative Credits System",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "20"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "firebase-admin": "^11.11.1",
        "firebase-functions": "^4.5.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/uuid": "^10.0.0",
        "typescript": "^5.3.0"
    },
    "private": true
}
